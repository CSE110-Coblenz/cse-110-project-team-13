{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./scripts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES6", "DOM"]
    },
    // scripts/**/*.ts tells TS which files to compile, so all .ts files
    "include": ["scripts/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
